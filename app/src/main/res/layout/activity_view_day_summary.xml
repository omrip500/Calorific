<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8bc34a"
    tools:context=".ViewDaySummaryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with title -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_day_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day Summary"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"/>

        <!-- Card for Nutritional Summary -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#dcedc8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Total Carbohydrates -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_carbs"
                        android:contentDescription="Carbs Icon" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_total_carbs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Carbohydrates: 150 g"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#000000"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <!-- Total Protein -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_protein"
                        android:contentDescription="Protein Icon" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_total_protein"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Protein: 60 g"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#000000"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <!-- Total Fat -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_fat"
                        android:tint="#FFFFFF"
                        android:contentDescription="Fat Icon" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_total_fat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Fat: 45 g"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#000000"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <!-- Total Calories -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_calories"
                        android:tint="#FFFFFF"
                        android:contentDescription="Calories Icon" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_total_calories"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Calories: 1800 kcal"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#000000"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card for Food Items -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#dcedc8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_food_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food Items Consumed"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="#4CAF50"/>

                <!-- Dummy food data -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="08:00 AM - Breakfast: Oatmeal with Fruits"
                        android:textColor="#000000"
                        android:layout_marginTop="4dp"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12:30 PM - Lunch: Grilled Chicken with Rice"
                        android:textColor="#000000"
                        android:layout_marginTop="4dp"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="06:00 PM - Snack: Greek Yogurt with Honey"
                        android:textColor="#000000"
                        android:layout_marginTop="4dp"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="08:30 PM - Dinner: Salad with Avocado and Nuts"
                        android:textColor="#000000"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card for Exercises Performed -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#dcedc8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_exercise_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exercises Performed"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="#4CAF50"/>

                <!-- Dummy exercise data -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="07:00 AM - Morning Run: 30 minutes"
                        android:textColor="#000000"
                        android:layout_marginTop="4dp"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="05:00 PM - Gym: 45 minutes"
                        android:textColor="#000000"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
