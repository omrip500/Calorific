<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".AddNewMealActivity">

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:padding="16dp">

<!-- Header with title -->
<com.google.android.material.textview.MaterialTextView
    android:id="@+id/tv_add_meal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Add New Meal"
    android:textAppearance="@style/TextAppearance.AppCompat.Large"
    android:textColor="#000000"
    android:layout_gravity="center"
    android:layout_marginTop="70dp"/>

<!-- Input for meal name -->
<com.google.android.material.textfield.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="32dp"
    android:hint="Meal Name">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_meal_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</com.google.android.material.textfield.TextInputLayout>

<!-- Input for calories -->
<com.google.android.material.textfield.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:hint="Calories (kcal)">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_calories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"/>
</com.google.android.material.textfield.TextInputLayout>

<!-- Input for protein -->
<com.google.android.material.textfield.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:hint="Protein (g)">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_protein"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"/>
</com.google.android.material.textfield.TextInputLayout>

<!-- Input for carbs -->
<com.google.android.material.textfield.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:hint="Carbs (g)">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_carbs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"/>
</com.google.android.material.textfield.TextInputLayout>

<!-- Input for fats -->
<com.google.android.material.textfield.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:hint="Fats (g)">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_fats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"/>
</com.google.android.material.textfield.TextInputLayout>

<!-- Button to save the meal -->
<Button
    android:id="@+id/btn_save_meal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Save Meal"
    android:textColor="#000000"
    android:layout_gravity="center"
    android:layout_marginTop="32dp"
    android:layout_marginBottom="32dp"/>

</LinearLayout>
    </ScrollView>
