<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#8bc34a"
    tools:context=".ReadyMealsActivity">

    <!-- Header with title -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_prepared_meals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prepared Meals"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"/>

    <!-- List of prepared meals -->
    <ListView
        android:id="@+id/lv_prepared_meals"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="16dp"/>

    <!-- Button to add a new prepared meal -->
    <Button
        android:id="@+id/btn_add_new_meal"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Add a new meal"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:layout_marginBottom="32dp"/>

</LinearLayout>
