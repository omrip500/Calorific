<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Meal Name -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_meal_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meal Name"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#000000" />

    <!-- Calories -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_meal_calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calories: 0 kcal"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#000000"
        android:layout_marginTop="4dp" />

    <!-- Protein -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_meal_protein"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Protein: 0 g"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#000000"
        android:layout_marginTop="4dp" />

    <!-- Carbohydrates -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_meal_carbs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carbohydrates: 0 g"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#000000"
        android:layout_marginTop="4dp" />

    <!-- Fat -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_meal_fat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fat: 0 g"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#000000"
        android:layout_marginTop="4dp" />

    <!-- Remove Button -->
    <Button
        android:id="@+id/btn_remove_meal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove"
        android:textColor="#FFFFFF"
        android:backgroundTint="#F44336"
        android:layout_marginTop="8dp"/>
</LinearLayout>
