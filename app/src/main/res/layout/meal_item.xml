<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Meal Name -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_meal_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/meal_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#000000" />

    <!-- Calories -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_meal_calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calories_0_kcal"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#000000"
        android:layout_marginTop="4dp" />

    <!-- Protein -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_meal_protein"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/protein_0_g"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#000000"
        android:layout_marginTop="4dp" />

    <!-- Carbohydrates -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_meal_carbs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/carbohydrates_0_g"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#000000"
        android:layout_marginTop="4dp" />

    <!-- Fat -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_meal_fat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fat_0_g"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#000000"
        android:layout_marginTop="4dp" />

    <!-- Remove Button -->
    <Button
        android:id="@+id/btn_remove_meal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#F44336"
        android:text="@string/remove"
        android:textColor="#000000" />
</LinearLayout>
