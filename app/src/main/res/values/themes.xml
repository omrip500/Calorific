<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Calorific" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- צבע הכפתורים -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorButtonNormal">@color/green</item>
        <item name="buttonStyle">@style/CustomButtonStyle</item>
    </style>

    <!-- Theme ברירת המחדל לאפליקציה -->
    <style name="Theme.Calorific" parent="Base.Theme.Calorific" />

    <!-- Theme מותאם אישית עבור ה-Splash Screen -->
    <style name="AppTheme.NoActionBarLaunch" parent="Base.Theme.Calorific">
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>
